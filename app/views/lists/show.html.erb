<div class="position-relative mb-5">
  <div
    class="card-category card-large text-white text-center p-5 rounded shadow-lg"
    style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(<%= @list.photo.attached? ? url_for(@list.photo.key) : asset_path('list_background.jpg') %>); background-size: cover; background-position: center; height: 300px;"
  >
    <h1 class="display-4"><%= @list.name %></h1>
  </div>
  <span class="movie-tag position-absolute top-0 end-0 bg-dark text-white py-1 px-3 rounded-pill shadow"><%= pluralize(@list.movies.size, "movie") %></span>
</div>

<div class="container mb-5">
  <div class="d-flex justify-content-between align-items-center my-4">
    <small class="text-muted">
      <em><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em>
    </small>
    <div>
      <button type="button" class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
        Add a Movie
      </button>
      <%= link_to "Delete this List", list_path(@list), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    </div>
  </div>

  <div class="row g-4">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 col-lg-4" data-aos="zoom-in">
        <div class="card shadow-sm h-100">
          <%= image_tag movie.poster_url, alt: movie.title, class: "card-img-top rounded-top" %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= movie.title %> <span class="text-warning small">â€¢ <%= movie.rating %> <i class="fas fa-star"></i></span></h5>
            <p class="text-muted small mb-3"><%= truncate(movie.overview, length: 100) %></p>
            <div class="d-flex justify-content-between mt-auto">
              <span class="small text-muted"><i class="fas fa-quote-left me-1"></i><%= bookmark.comment %></span>
              <%= link_to "Delete", bookmark_path(bookmark), class: "text-danger small", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <hr class="my-5">

  <div class="row g-4">
    <div class="col-12 col-md-6">
      <h3>Reviews</h3>
      <% if @list.reviews.empty? %>
        <p class="text-muted"><em>Be the first one to review this list</em></p>
      <% else %>
        <% @list.reviews.each do |review| %>
          <div class="mb-3">
            <div>
              <% review.rating.times do %>
                <i class="fas fa-star text-warning"></i>
              <% end %>
              <small class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</small>
            </div>
            <p class="mb-0"><%= review.comment %></p>
          </div>
          <hr>
        <% end %>
      <% end %>
    </div>
    <div class="col-12 col-md-6">
      <div class="bg-light p-4 rounded shadow-sm">
        <h5 class="mb-3">Add Your Review</h5>
        <%= simple_form_for [@list, @review] do |f| %>
          <%= f.input :comment, label: false, placeholder: "Add your review here...", class: "form-control mb-3" %>
          <%= f.input :rating, as: :select, collection: (1..5), label: false, input_html: { class: "form-select" } %>
          <%= f.submit "Submit", class: "btn btn-primary mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "bookmarks/modal", list: @list, bookmark: @bookmark %>
